@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Manager Role";
}

<h2>Manage Role</h2>
<table><tr><td style="height:20px"></td></tr></table>
<table id="tbRole" style="width:30%;border:solid 4px red; background-color:skyblue; padding:0">
    <tr>
        <td style="background:green; color:white;padding:10px">
            Role Name
        </td>
    </tr>
    @if(Model != null)
    {
        foreach(var item in Model)
        {
            <tr>
                <td style="padding:10px; border-bottom:1px solid #fF006e">
                    @item.Name
                </td>
            </tr>
        }
    }
</table>
<table>
    <tr>
        <td style="height:20px;"/>
    </tr>
    <tr>
        <td style="height:20px; text-align:right">
            @Html.ActionLink("Add New Role","Create","Role")
        </td>
    </tr>
</table>